// ============================================================================
// ANNOTATOR THEME - EDIT ALL COLORS HERE
// ============================================================================
// This file contains all the color definitions for the application.
// Edit the colors in the sections below to customize the look and feel.

export global AppTheme {
    // ========================================================================
    // PRIMARY COLORS - Main brand colors
    // ========================================================================
    in-out property <color> primary-main: #4A7CC7;           // Main blue
    in-out property <color> primary-light: #ADC6FF;          // Light blue
    in-out property <color> primary-dark: #2B4678;           // Dark blue
    in-out property <color> primary-container: #D8E2FF;      // Primary background

    // ========================================================================
    // SECONDARY COLORS - Supporting colors
    // ========================================================================
    in-out property <color> secondary-main: #575E71;         // Gray-blue
    in-out property <color> secondary-light: #BFC6DC;        // Light gray-blue
    in-out property <color> secondary-dark: #3F4759;         // Dark gray-blue
    in-out property <color> secondary-container: #DBE2F9;    // Secondary background

    // ========================================================================
    // ACCENT/TERTIARY COLORS - Highlights and special UI elements
    // ========================================================================
    in-out property <color> accent-main: #715573;            // Purple
    in-out property <color> accent-light: #DEBCDF;           // Light purple
    in-out property <color> accent-dark: #583E5B;            // Dark purple
    in-out property <color> accent-container: #FCD7FB;       // Accent background

    // ========================================================================
    // ANNOTATION COLORS - For different annotation states
    // ========================================================================
    in-out property <color> annotation-pending: accent-main;     // Purple for pending
    in-out property <color> annotation-manual: secondary-main;   // Gray-blue for manual
    in-out property <color> annotation-accepted: primary-main;   // Blue for accepted
    in-out property <color> annotation-selected: accent-container; // Light purple for selected

    // ========================================================================
    // SURFACE COLORS - Backgrounds and containers
    // ========================================================================
    in-out property <color> surface-base: #1A1B20;           // Base dark surface
    in-out property <color> surface-container-lowest: #0C0E13;  // Darkest
    in-out property <color> surface-container-low: #1A1B20;     // Dark
    in-out property <color> surface-container: #1E1F25;         // Medium dark
    in-out property <color> surface-container-high: #282A2F;    // Medium
    in-out property <color> surface-container-highest: #33353A; // Lightest dark

    // ========================================================================
    // TEXT COLORS - All text and labels
    // ========================================================================
    in-out property <color> text-primary: #E2E2E9;           // Main text
    in-out property <color> text-secondary: #C4C6D0;         // Secondary text
    in-out property <color> text-tertiary: #8E9099;          // Subtle text
    in-out property <color> text-on-primary: #FFFFFF;        // Text on primary color
    in-out property <color> text-on-accent: #FFFFFF;         // Text on accent color

    // ========================================================================
    // BORDER AND OUTLINE COLORS
    // ========================================================================
    in-out property <color> outline: #8E9099;                // Main borders
    in-out property <color> outline-variant: #44474F;        // Subtle borders
    in-out property <color> divider: #44474F;                // Divider lines

    // ========================================================================
    // STATUS COLORS - Error, warning, success, info
    // ========================================================================
    in-out property <color> error: #BA1A1A;                  // Red
    in-out property <color> warning: #F59E0B;                // Orange
    in-out property <color> success: #10B981;                // Green
    in-out property <color> info: #3B82F6;                   // Blue

    // ========================================================================
    // CANVAS COLORS - Image viewing area
    // ========================================================================
    in-out property <color> canvas-background: surface-container-low;  // Dark canvas
    in-out property <color> canvas-grid: #FFFFFF.with-alpha(0.05);     // Grid lines

    // ========================================================================
    // HELPER FUNCTION - Get annotation color based on state
    // ========================================================================
    pure function annotation-color-for-state(state: string) -> color {
        if (state == "Pending") { return annotation-pending; }
        if (state == "Manual") { return annotation-manual; }
        annotation-accepted
    }
}
